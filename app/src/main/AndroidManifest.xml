    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Splash"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.H5Activity" />
        <activity
            android:name=".ui.login.VerificationCodeActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name=".ui.login.SetPwdActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name=".ui.userinfo.EditTeacherInfoActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged|adjustPan" />
        <activity android:name=".ui.square.SquareDetailActivity" />
        <activity android:name=".ui.report.ReportActivity"></activity>
        <activity android:name=".ui.userinfo.StudentDetailActivity" />
        <activity android:name=".ui.userinfo.TeacherDetailActivity" />
        <activity android:name=".ui.order.single.OrderDetailActivity" />
