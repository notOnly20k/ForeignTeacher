<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_00">
    <cn.sinata.xldutils.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar"/>
    <LinearLayout
        android:id="@+id/lin_bottom"
        android:background="@color/black_00"
        android:layout_width="match_parent"
        android:orientation="horizontal"
       android:layout_alignParentBottom="true"
        android:layout_height="45dp">
    <ImageView
        android:id="@+id/img_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/empty_like"
        android:tint="@color/white"
        android:layout_gravity="center_vertical"
        />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/comment"
            android:tint="@color/white"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <cn.sinata.xldutils.view.SwipeRefreshRecyclerLayout
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:background="@color/white"
        android:paddingLeft="@dimen/android_margin"
        android:paddingRight="@dimen/android_margin"
        android:paddingTop="@dimen/android_margin"
        tools:listitem="@layout/item_square_comment"
        android:layout_above="@id/lin_bottom"
        />
</RelativeLayout>