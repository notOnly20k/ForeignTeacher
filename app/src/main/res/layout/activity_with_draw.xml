<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f1f1f1"
    android:orientation="vertical">

    <cn.sinata.xldutils.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/android_margin"
            android:paddingRight="8dp"
            android:text="Receiving card"
            android:textColor="@color/black_00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bank_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="@dimen/android_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/android_margin"
            android:text="Withdraw Amount"
            android:textColor="@color/black_00"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="number"
            android:layout_marginLeft="@dimen/android_margin"
            android:hint="Please enter the withdraw amount"
            android:textColor="@color/grey_cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/android_margin"
            android:textSize="@dimen/text_12"
            android:textColor="@color/color_black_666666"
            android:text="ï¿¥236.8 left in balance" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_with_draw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/android_margin"
        android:layout_marginRight="@dimen/android_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bg_commit"
        android:gravity="center"
        android:textColor="@color/black_00"
        android:textSize="16sp"
        android:text="@string/with_draw" />

</LinearLayout>
