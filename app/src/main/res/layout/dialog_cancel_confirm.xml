<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="313dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@mipmap/dialog_top"
        android:text="@string/cancel_confirm"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text_333333"
        />
        <TextView
            android:id="@+id/tv_info"
            android:layout_below="@id/tv_title"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="36dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:text="Canceling accepted orders will add up on your cancel rate,this might
            affect client's choice.
    Are you sure you have to cancel
            this confirmed order? "
            />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:text="No"
        android:gravity="center"
        android:layout_marginLeft="26dp"
        android:layout_below="@id/tv_info"
        android:background="@drawable/bg_grey_button"
        />
    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:text="Yes"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="26dp"
        android:layout_below="@id/tv_info"
        android:background="@drawable/bg_yellow_button"
        />

</RelativeLayout>