<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/android_margin"
        android:paddingRight="@dimen/android_margin"
        >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@mipmap/dialog_top"
        android:text="@string/cancel_confirm"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text_333333"
        />
    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/android_margin"
        >
        <TextView
            android:background="@color/white"
            android:id="@+id/tv_info"
            android:gravity="center"
            android:layout_width="255dp"
            android:layout_height="150dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="36dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/text_333333"
            android:text="@string/cancel_confirm_info"
            />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_marginLeft="@dimen/android_margin"
        android:text="No"
        android:gravity="center"
        android:layout_below="@id/tv_info"
        android:background="@drawable/bg_grey_button"
        />
    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_marginRight="@dimen/android_margin"
        android:text="Yes"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_below="@id/tv_info"
        android:background="@drawable/bg_yellow_button"
        />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>