<RelativeLayout android:layout_above="@id/rl_order_msg_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/android_margin"
    android:paddingRight="@dimen/android_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_system_msg"
        android:layout_marginLeft="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginTop="@dimen/android_margin"
            android:layout_marginLeft="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Notice"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:id="@+id/tv_title"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/text_12"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="@dimen/android_margin"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_new_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time"
            android:layout_alignParentRight="true"
            android:background="@mipmap/point_msg"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_12"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head"
        android:layout_centerVertical="true"
        android:layout_width="58dp"
        android:layout_height="58dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@color/color_place_holder"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        />
</RelativeLayout>