<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/rb_date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_schedule_text_edit"
            android:button="@null"
            android:gravity="center"
            android:padding="6dp"
            android:text="09:00-10:00"
            android:textColor="@color/text_333333" />
        <!--android:background="@drawabg_schedule_text_fill_rightfill"-->
        <!--android:background="@drawable/bg_schedule_text_half"-->
        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_discount"
            android:gravity="center"
            android:text="30%"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rb_date"
            android:layout_marginTop="3dp"
            android:background="@color/grey_f1f1f1" />
    </RelativeLayout>

</LinearLayout>
