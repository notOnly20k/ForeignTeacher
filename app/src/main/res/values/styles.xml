<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black_00</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme_user_info" parent="AppTheme">
    </style>
    <!--避免第一次进来白屏或黑屏-->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--登录-->
    <style name="style_login_tv_title">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="style_login_input">
        <item name="android:drawablePadding">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="user_info_edit_title">
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:textColor">@color/text_333333</item>
    </style>

    <!--我的-->
    <style name="style_mine_tv_hint">
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">@dimen/textSize15</item>
    </style>

    <style name="style_user_info_item">
        <item name="android:textColor">@color/text_black_222222</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="style_order_info_item">
        <item name="android:textColor">@color/color_black_666666</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="add_languages_item">
        <item name="android:textColor">@color/yellow_ffcc00</item>
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="text_bottom_dialog">
        <item name="android:textColor">@color/yellow_ffcc00</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="style_search_title">
        <item name="android:textColor">@color/color_tv_1a1a1a</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_course_list_title">
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_home_teacher_name">
        <item name="android:textColor">#474747</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_password_toggle">
        <item name="android:button">@drawable/pass_word_toggel</item>
    </style>

    <style name="style_language_tab">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="teacher_small_text">
        <item name="android:textColor">@color/color_474747</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <!--让dialog弹出时，Activity不变暗-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="style_pinpin_tab">
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_tv_dialog">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@color/black_00</item>
    </style>

    <style name="style_order_tv_hint">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="style_app_tv_tip">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_discount_coupon_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_discount_coupon_money">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">43sp</item>
    </style>

    <style name="style_dialog_pay_way">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="style_title_tv">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="style_title_tv_yellow">
        <item name="android:textColor">@color/yellow_ffcc00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>



    <style name="style_radio_btn">
        <item name="android:button">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>



    <style name="style_teacher_filter">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/android_margin</item>
    </style>


    <style name="style_tv_teacher_info">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomBottomDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>v
    </style>

    <style name="style_title_tv_indicator">
        <item name="android:textColor">@color/black_00</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_bottom_yellow</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="style_user_info_title">
        <item name="android:textColor">@color/black_00</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="style_bold_info">
        <item name="android:textColor">@color/black_00</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="style_user_info_label">
        <item name="android:textColor">@color/black_00</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="radio_order_selected" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/yellow_ffcc00</item>
        <item name="android:drawableBottom">@mipmap/sport_yellow</item>
        <item name="android:button">@null</item>
    </style>
    <style name="radio_order_normal" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/yellow_ffcc00</item>
        <item name="android:button">@null</item>
    </style>


    <style name="style_order_tablayout">
    </style>

    <style name="style_course_list_datetime_location">
        <item name="android:textColor">@color/color_black_666666</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:drawableLeft">@mipmap/icon_datetime</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_tv_mine_item">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_00</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>


    <dimen name="text_13">13sp</dimen>

</resources>
