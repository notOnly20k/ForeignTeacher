<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soundcloud.android.crop.test" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.soundcloud.android.crop.test"
        android:targetPackage="com.soundcloud.android.crop.test" />

    <application android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <provider
            android:name="com.soundcloud.android.crop.provider.SwiftyFileProvider"
            android:authorities="com.xld.foreignteacher.data.provider.SwiftyFileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>