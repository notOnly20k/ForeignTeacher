<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_face_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconPagerView
        android:id="@+id/pager_view"
        android:layout_width="match_parent"
        android:layout_height="142dp" />

    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconIndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:id="@+id/lv_short"
        android:dividerHeight="1px"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp">

            <TextView
                android:id="@+id/tab_express"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_top_line"
                android:gravity="center"
                android:text="Emoji"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tab_short"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fff"
                android:gravity="center"
                android:text="Often used"
                android:textColor="#666666"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
    <!--<View -->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="#CFCFCF"-->
    <!--/>-->

    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconScrollTabBar
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone" />

</LinearLayout>